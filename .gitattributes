# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
*.c text
*.h text
*.cpp text
*.hpp text
*.cs text
*.java text
*.py text
*.js text
*.html text
*.css text
*.md text
*.json text
*.xml text
*.yml text
*.yaml text

# Declare binary files to avoid automatic normalization
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.exe binary
*.dll binary
*.so binary
*.pdf binary

# Handle line endings for shell scripts and batch files
*.sh text eol=lf
*.bat text eol=crlf

# Custom attributes for specific files
*.ps1 text eol=lf
*.sql text eol=lf